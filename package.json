{
  "name": "my-fortune",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "postinstall": "npx lightningcss --version && echo 'lightningcss verified'"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "lightningcss": "^1.21.0",
    "axios": "^1.8.4",
    "i18next": "^25.0.0",
    "react-i18next": "^15.4.1",
    "zustand": "^5.0.3"
  }
}
